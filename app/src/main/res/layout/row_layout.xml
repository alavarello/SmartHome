<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/rowLayout_mainLayout">

    <ImageView
        android:id="@+id/rowLayout_iconImageView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="35dp"
        android:layout_marginTop="29dp"
        android:src="@mipmap/ic_launcher" />

    <TextView
        android:id="@+id/rowLayout_nameTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/rowLayout_iconImageView"
        android:layout_marginStart="71dp"
        android:layout_toEndOf="@+id/rowLayout_iconImageView"
        android:text="" />

</RelativeLayout>
